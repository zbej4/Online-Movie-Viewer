@model IEnumerable<Project_2___Online_Movie_Viewer.Models.Movie>

@{
    ViewBag.Title = "Index";
    var viewed = ViewBag.ViewedMovies;
    var count = 0;
}

<h2>@ViewBag.Title</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            Watched / Not Watched
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    count += 1;
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            Not Watched
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Watch", "Watch", new { movie=item.Id })
        </td>
    </tr>
}

</table>
<hr />
<div>
    <h4>Total Number of Movies: @count</h4>
</div>

<div>
    @Html.ActionLink("Back to Home", "Index", "Home")
</div>
